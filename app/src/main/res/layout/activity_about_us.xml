<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- App Description -->
        <TextView
            android:id="@+id/text_app_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MindCare helps users manage their mental health by tracking moods, writing journals, and setting small goals. The app provides insights and reminders for self-care."
            android:textSize="16sp"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textColor="@android:color/black"/>

        <!-- Developers Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"/>

        <!-- Developer Cards -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_azlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Azlan"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="College: Sardar Patel Institute of Technology\nRole: Android Developer, Backend Developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_luqman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luqman"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="College: Sardar Patel Institute of Technology\nRole: Backend Developer, AIML Developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_prathmesh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prathmesh"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:text="College: Sardar Patel Institute of technology\nRole: UI/UX Designer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:paddingTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
